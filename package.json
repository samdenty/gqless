{
  "license": "MIT",
  "workspaces": [
    "internal/*",
    "examples/*",
    "packages/*",
    "gqless",
    "gqless/example",
    "packages/*/example"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "release": "yarn build && lerna publish",
    "test": "jest",
    "build": "yarn run build:all --since",
    "build:all": "lerna run build --no-private",
    "docs": "yarn workspace @internal/website start",
    "docs:build": "yarn workspace @internal/website build"
  },
  "homepage": "https://github.com/samdenty/gqless",
  "private": true,
  "jest": {
    "projects": [
      "<rootDir>/packages/*/jest.config.js",
      "<rootDir>/gqless/jest.config.js"
    ],
    "coverageDirectory": "<rootDir>/coverage/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@types/jest": "^24.0.16",
    "codecov": "^3.5.0",
    "graphql-faker": "^1.9.0",
    "husky": "^3.0.2",
    "lerna": "^3.16.4",
    "pretty-quick": "^1.11.1",
    "tsdx": "^0.7.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {}
}
